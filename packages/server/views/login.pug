doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Capsule OAuth Login
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap")
    script.
          document.addEventListener('DOMContentLoaded', function() {
            const redirectUrl = '#{redirect}';
            if (redirectUrl && redirectUrl.length > 0) {
              window.location.href = redirectUrl;
            }
          });
    style.
        :root {
        --background: #000000;
        --foreground: #fafafa;
        --card: rgba(20, 25, 35, 0.7);
        --card-foreground: #000000;
        --primary: #15B8A6;
        --primary-foreground: #fafafa;
        --muted: #27272a;
        --muted-foreground: #a1a1aa;
        --border: rgba(39, 39, 42, 0.5);
        --input: rgba(20, 25, 35, 0.7);
        --ring: #14b8a6;
        }

        @font-face {
        font-family: 'DelightExtraLight';
        src: url('path-to-your-font/DelightExtraLight.woff2') format('woff2');
        font-weight: 300;
        font-style: normal;
        }
        body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: radial-gradient(circle at center, #101820 0%, #000 100%);
        color: var(--foreground);
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        position: relative;
        overflow: hidden;
        }
        body::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 30% 40%, rgba(20, 30, 48, 0.4) 0%, transparent 70%);
        z-index: -1;
        }
        .capsule-logo {
        position: absolute;
        top: 1rem;
        left: 1rem;
        font-family: 'DelightExtraLight', sans-serif;
        color: #a1a1aa;
        font-size: 1.125rem;
        z-index: 10;
        }
        .gradient-circle {
        position: absolute;
        width: 600px;
        height: 600px;
        border-radius: 100%;
        background: linear-gradient(
            165deg,
            rgba(40, 45, 55, 1) 0%,
            rgb(30, 35, 45) 40%,
            rgb(20, 25, 35) 98%,
            rgb(10, 15, 25) 100%
        );
        z-index: -1;
        filter: blur(1px);
        }
        .loader {
        width: 700px;
        height: 700px;
        position: absolute;
        z-index: -2;
        }
        .loader:before {
        position: absolute;
        content: '';
        width: 100%;
        height: 100%;
        border-radius: 100%;
        border-bottom: 0 solid #00000005;
        top: 0;
        left: 0;
        transform-origin: center center;
        box-shadow:
            0 -10px 20px 20px #00000040 inset,
            0 -5px 15px 10px #00000050 inset,
            0 -2px 5px #00000080 inset,
            0 -3px 2px #000000bb inset,
            0 2px 0px #000000,
            0 2px 3px #000000,
            0 5px 5px #00000090,
            0 10px 15px #00000060,
            0 10px 20px 20px #00000040;
        filter: blur(3px);
        animation: 2s rotate linear;
        }
        @keyframes rotate {
        100% {
            transform: rotate(360deg);
        }
        }
        .card {
        background-color: var(--card);
        border-radius: 0.75rem;
        border: 1px solid var(--border);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        width: 100%;
        max-width: 420px;
        overflow: hidden;
        position: relative;
        z-index: 1;
        backdrop-filter: blur(10px);
        }
        .header {
        padding: 1.75rem;
        border-bottom: 1px solid var(--border);
        }
        .title {
        margin: 0;
        font-family: 'DelightExtraLight', sans-serif;
        font-size: 1.75rem;
        font-weight: 300;
        color: var(--foreground);
        letter-spacing: 0.01em;
        }
        .description {
        margin-top: 0.5rem;
        color: var(--muted-foreground);
        font-size: 0.875rem;
        }
        .content {
        padding: 1.75rem;
        }
        .form-group {
        margin-bottom: 1.25rem;
        }
        .label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: #e0e0e0;
        }
        .input {
        width: 100%;
        padding: 0.625rem;
        background-color: var(--input);
        border: 1px solid var(--border);
        border-radius: 0.375rem;
        color: var(--foreground);
        font-size: 0.875rem;
        transition: all 0.2s ease;
        box-sizing: border-box;
        }
        .input:focus {
        outline: none;
        border-color: var(--ring);
        box-shadow: 0 0 0 2px rgba(20, 184, 166, 0.3);
        }
        .footer {
        padding: 1.25rem 1.75rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid var(--border);
        }
        .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.625rem 1.25rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.5;
        cursor: pointer;
        transition: all 0.2s ease;
        }
        .button-primary {
        background-color: var(--primary);
        color: var(--primary-foreground);
        border: none;
        width: 100%;
        }
        .button-primary:hover {
        background-color: #0d9488;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(20, 184, 166, 0.25);
        }
        .oauth-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: 1.5rem;
        }
        .oauth-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        width: 100%;
        padding: 0.625rem;
        background-color: var(--card);
        border: 1px solid var(--border);
        border-radius: 0.25rem;
        color: var(--foreground);
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s;
        }
        .oauth-button:hover {
        background-color: var(--muted);
        }
        .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
        color: var(--muted-foreground);
        font-size: 0.875rem;
        }
        .divider::before, .divider::after {
        content: "";
        flex: 1;
        height: 1px;
        background-color: var(--border);
        }
        .divider::before {
        margin-right: 0.5rem;
        }
        .divider::after {
        margin-left: 0.5rem;
        }
        .forgot-password {
        color: var(--primary);
        font-size: 0.875rem;
        text-decoration: none;
        transition: color 0.2s;
        }
        .forgot-password:hover {
        color: #0d9488;
        text-decoration: underline;
        }
        .error-message {
        color: var(--error);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        padding: 0.5rem;
        border-radius: 0.25rem;
        background-color: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.2);
        margin-bottom: 1rem;
        }

        .input-error {
        border-color: var(--error);
        }

        .input-error:focus {
        border-color: var(--error);
        box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.3);
        }

  body
    div.card
      div.header
        h2.title Sign In
        p.description Access your Capsule account

      div.content
        form(action="/api/v1/users/oauth/login?redirect_uri=" + encodeURIComponent(redirect_uri) + "&scopes=" + encodeURIComponent(scopes) + "&client_identifier=" + encodeURIComponent(client_identifier) method="POST")
          if error
            div.error-message #{error}
          div.form-group
            label.label(for="email") Email
            input.input(type="email" id="email" name="email" placeholder="name@example.com" required class=error ? "input-error" : "" value=email || "")

          div.form-group
            label.label(for="password") Password
            input.input(type="password" id="password" name="password" required class=error ? "input-error" : "")

          button.button.button-primary(type="submit" style="margin-top: 1rem;") Sign In

          div.divider or

          div.form-group(style="text-align: center; margin-top: 1rem;")
            a.forgot-password(href="/forgot-password") Forgot password?
